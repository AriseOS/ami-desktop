{
  "appId": "com.arise.ami",
  "productName": "Ami",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "electron/**/*"
  ],
  "extraResources": [
    {
      "from": "daemon-ts/dist/",
      "to": "daemon-ts/dist/"
    },
    {
      "from": "daemon-ts/node_modules/",
      "to": "daemon-ts/node_modules/"
    },
    {
      "from": "daemon-ts/package.json",
      "to": "daemon-ts/"
    },
    {
      "from": "daemon-ts/config/",
      "to": "daemon-ts/config/"
    }
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "icon": "icons/icon.icns",
    "target": [
      {
        "target": "dmg",
        "arch": ["arm64"]
      },
      {
        "target": "dir",
        "arch": ["arm64"]
      }
    ],
    "hardenedRuntime": true,
    "gatekeeperAssess": false
  },
  "dmg": {
    "contents": [
      { "x": 130, "y": 220 },
      { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
    ]
  },
  "win": {
    "icon": "icons/icon.ico",
    "target": [
      {
        "target": "dir",
        "arch": ["x64"]
      }
    ]
  }
}
