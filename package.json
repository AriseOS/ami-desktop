{
  "name": "ami-desktop",
  "productName": "Ami",
  "private": true,
  "version": "0.4.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "postinstall": "cd daemon-ts && npm install",
    "dev": "vite",
    "build": "vite build",
    "clean": "rm -rf release dist daemon-ts/dist",
    "build:daemon": "cd daemon-ts && npm ci && npm run build",
    "build:all": "rm -rf release && npm run build:daemon && npm run build && npx electron-builder",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on tcp:1420 && AMI_DEV_MODE=1 VITE_DEV_SERVER_URL=http://localhost:1420 electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "dependencies": {
    "electron-store": "^10.0.0",
    "tree-kill": "^1.2.2",
    "html2canvas": "^1.4.1",
    "i18next": "^25.7.4",
    "js-yaml": "^4.1.1",
    "jspdf": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^16.5.3",
    "react-markdown": "^10.1.0",
    "reactflow": "^11.11.4",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "concurrently": "^9.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "vite": "^4.4.5",
    "wait-on": "^8.0.0"
  }
}
